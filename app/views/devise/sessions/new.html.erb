<section class="login">
  <div class="entrance">
    <h2>Вход</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="email">
        <%= f.label :email, placeholder: 'E-mail' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="password">
        <%= f.label :password, placeholder: 'Пароль' %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <%# <% if devise_mapping.rememberable? %>
        <!-- <div class="field">
          <%# <%= f.check_box :remember_me %>
          <%# <%= f.label :remember_me %> %> %>
        </div> -->
      <%# <% end %>

      <div class="actions">
        <%= f.submit "Войти" %>
      </div>

      <div class="links">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>

</section>
